datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String   @unique
  vehicleModel String?
  otherNotes   String?
  city         String?
  state        String?
  phone        String?
  year         Int?
  make         String?
  createdAt    DateTime @default(now()) // Automatically set the createdAt timestamp
  updatedAt    DateTime @updatedAt // Automatically updates on each modification
}
